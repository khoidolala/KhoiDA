@model QuanLyNhanSu.Models.tblPhong

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="headerh2">Xóa phòng/ban</h2>

<div class=" d-flex justify-content-center align-content-center pt-5">
    <dl class="dl-horizontal">
        <dt>
            Phòng/ban
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhong)
        </dd>

        <dt>
            Trưởng phòng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTruongPhong)
        </dd>

        <dt>
            Số điện thoại 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoaiPhong)
        </dd>
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                        <div class="form-actions">
                            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" /> &nbsp;
                            @Html.ActionLink("Quay lại danh sách", "Index",null, new { @class="btn btn-primary"})
                        </div>}
        </dd>
    </dl>
</div>
