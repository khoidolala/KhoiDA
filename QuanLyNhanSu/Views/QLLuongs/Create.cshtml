@model QuanLyNhanSu.Models.tblLuong

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="headerh2">Thêm mới lương</h2>

@using (Html.BeginForm("Create","QLLuongs",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal px-md-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Mã lương
            <div class="col-md-5">
                @Html.EditorFor(model => model.MaLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tháng
            <div class="col-md-5">
                @Html.EditorFor(model => model.Thang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Thang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên nhân viên
            <div class="col-md-5">
                @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số ngày làm việc
            <div class="col-md-5">
                @Html.EditorFor(model => model.SoNgayLamViec, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoNgayLamViec, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số giờ làm việc
            <div class="col-md-5">
                @Html.EditorFor(model => model.SoGioLamViec, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoGioLamViec, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Hệ số lương
            <div class="col-md-5">
                @Html.DropDownList("MaHSL", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaHSL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Thưởng
            <div class="col-md-5">
                @Html.DropDownList("MaThuong", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaThuong, "", new { @class = "text-danger" })
            </div>
        </div>
            
        <div class="form-group">
            Phụ cấp
            <div class="col-md-5">
                @Html.DropDownList("MaPhuCap", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPhuCap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tiền phạt
            <div class="col-md-5">
                @Html.EditorFor(model => model.TienPhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TienPhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tạm ứng
            <div class="col-md-5">
                @Html.EditorFor(model => model.TamUng, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TamUng, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Index",null,new { @class="btn btn-primary"})
            </div>
        </div>
    </div>
}


